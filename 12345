print("Predict Your House Price")
print("Answer the following questions to estimate your house's value")

user_input = {}
for feature in selected_features:
    try:
        example_val = round(X_train[feature].median(), 2)
        val = float(input(feature + " (Example: " + str(example_val) + "): "))
        user_input[feature] = val
    except:
        user_input[feature] = example_val
        print("Invalid input. Using default:", example_val)

# Create a full-zero row with all the columns used during training
input_row = pd.DataFrame([np.zeros(X_train.shape[1])], columns=X_train.columns)

# Fill in the selected user values
for feature in selected_features:
    input_row.at[0, feature] = user_input[feature]

# Scale and predict
input_scaled = scaler.transform(input_row)
predicted_price = np.expm1(ridge.predict(input_scaled)[0])
print("Estimated Sale Price: $", round(predicted_price, 2))
